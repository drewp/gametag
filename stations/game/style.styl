body
  margin: 0
  
img.bg
  position: absolute
  z-index: -10
  width: 100%
  height: 100%


div.fg
  position: absolute
  left: 50px
  right: 50px
  top: 200px
  bottom: 200px
  text-align: center

div.fg > div
  display: inline-block
  
.score
  //border: 2px solid blue
  background: rgba(0, 0, 0, 0.47);
  box-shadow: 0 0 120px #000; 
    
.scorecardEnvelope
  z-index: 1

  overflow: hidden;

  .scorecard
    padding: 50px
    position: relative
    left: 0px


    background: rgba(0, 0, 0, 0.5)
    border-bottom-right-radius: 25px
    border-top-left-radius: 25px
    border-top-right-radius: 0px
    border: 5px solid white
    margin-left: -5px
    font-size: 18px

  .scorecardAnim
    -webkit-animation-duration: .5s;
    -webkit-animation-name: openDrawer;

.scanArea
  padding-top: 5px
  background: rgba(6, 14, 125, 0.5)
  border-radius: 25px
  border: 5px solid hsl(39, 100%, 50%)
  color: white
  text-shadow: 1px 2px 1px hsl(39, 100%, 50%)
  
  .need
    text-shadow: 1px 2px 2px white

.scan
.scorecard
  text-align: center

@keyframes openDrawer
  from { left: -600px }
  to { left: 0px }

.demoButtons
  position: fixed
  left: 0
  bottom: 20px
  background: rgba(250,250,250,.4)
