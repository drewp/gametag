body
  margin: 0
  
img.bg
  position: absolute
  z-index: -10
  width: 100%
  height: 100%


div.fg
  position: absolute
  left: 50px
  right: 50px
  top: 200px
  bottom: 200px
  text-align: center

div.fg > div
  display: inline-block
  
.score
  //border: 2px solid blue
  background: rgba(0, 0, 0, 0.47);
  box-shadow: 0 0 120px #000; 
    
.scorecardEnvelope
  z-index: 1

  overflow: hidden;

  .scorecard
    background: #bbb
    border-top-right-radius: 10px
    border-bottom-right-radius: @border-top-right-radius
    padding: 50px
    position: relative
    left: 0px
  .scorecardAnim
    -webkit-animation-duration: .5s;
    -webkit-animation-name: openDrawer;


.scan
.scorecard
  text-align: center

@keyframes openDrawer
  from { left: -600px }
  to { left: 0px }

.demoButtons
  position: fixed
  left: 0
  bottom: 20px
  background: rgba(250,250,250,.4)
