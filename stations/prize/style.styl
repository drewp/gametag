html
  background: hsl(0, 0%, 9%)

body
  width: 2560px
  height: 1600px
  font-size: 36px
  background: black
  overflow: hidden

h2
  font-size: 48px
  margin-top: 0px
  margin-bottom: 20px

.gamesPlayed table
  font-size: 25px
  width: 100%

  tr:nth-child(even)
    background: hsl(240, 100%, 15%)

  tr:nth-child(odd)
    background: hsl(0, 0%, 17%)

  td
    padding: 7px 20px
  tr.unplayed
    color: hsl(39, 100%, 50%)
    font-weight: bold
    
.pointsBar
  width: 250px
  height: 725px
  margin: 0 45px
  position: relative
  border: 2px solid white
  background: black

  .label
    font-size: 40px;
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    bottom: 10px;
    z-index: 1;
    color: white
    
  .bar
    background: hsl(39, 100%, 50%);
    position: absolute;
    bottom: 0;
    border: 2px solid hsl(0, 100%, 100%);
    border-bottom: 0;
    width: 100%
    left: -2px

.pointsBar.spent .bar
  background: hsl(204, 67%, 54%);
  bottom: -2px
  color: white
  
.rankPrizes
  tr.alreadyAchieved td.label
    text-decoration: line-through
    color: gray
  tr.isCurrent td.label span
    display: inline-block;
    padding: 7px;
    
  tr.notAchieved td.label
    color: hsl(0, 0%, 22%)

.catalog tr.avail
  .permission:after
    content: "Available!"

.catalog tr.cantAfford
  .label, .points 
    text-decoration: line-through
  .permission:after
    content: "Not enough points"
  
    
.scanArea, .scanDiv, .gamesPlayed, .pointGraphs, .rankPrizes, .catalog, .pointsAvail
  border: 10px solid white
  display: inline-block
  vertical-align: top
  margin: 20px
  padding: 25px

.scanArea
  overflow: visible
  background: none
  box-shadow: none
  border: none
  -webkit-transform scale(2.1)
  margin-left: 135px
  margin-top: 190px

  h2
    font-size: 36px

.scanDiv
  height: 810px
  width: 500px
  background: hsl(240, 100%, 15%)
  border: 10px solid hsl(39, 100%, 50%)
  border-radius: 90px

.pointGraphs
  height: 810px
  width: 700px
  border-top-left-radius: 90px
  border-bottom-right-radius: 90px

.gamesPlayed
  width: 1000px
  height: 810px
  border-top-left-radius: 90px
  border-bottom-right-radius: 90px

.rankPrizes
  width: 500px
  height: 390px
  border-top-left-radius: 90px
  border-bottom-right-radius: 90px
  font-size: 34px

.pointsAvail
  width: 700px
  height: 390px
  border-bottom-right-radius: 90px
  border-top-left-radius: 90px

.pointsAvailCenter
  width: 700px
  font-size: 150px
  color: hsl(39, 100%, 50%)
  margin-top: 70px
  text-align: center

.catalog
  width: 1000px
  height: 395px
  border-bottom-right-radius: 90px
  border-top-left-radius: 90px

.catalog table
  width: 100%
  color: white

  tr:nth-child(1)
    background: hsl(39, 100%, 50%)
    color: black

  tr:nth-child(2)
    background: hsl(240, 100%, 15%)

  tr:nth-child(3)
    background: hsl(0, 0%, 17%)

  td
    padding: 7px 20px

  h2
    margin-bottom: 0px

.rankPrizes table
  width: 100%
  color: white
  font-size: 90%

  tr:nth-child(even)
    background: hsl(240, 100%, 15%)

  tr:nth-child(odd)
    background: hsl(0, 0%, 17%)

  tr:nth-child(1)
    background: hsl(39, 100%, 50%)
    color: black

  td
    padding: 7px 20px

.scanArea img
  border: 5px solid white
  border-top-left-radius: 45px
  border-bottom-right-radius: 45px

