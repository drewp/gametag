body
  width: 1280px
  height: 800px
  min-height: 700px
  overflow: hidden
    
.grid 
    position: relative
    padding-left: 160px

.col 
    padding: 0 30px 0 30px
    display: inline-block;
    vertical-align: top

canvas { width: 320px; height: 240px; }
button { padding: 10px; }

#badge {
    width: 310px;
    height: 259px;
    position: relative;
    display: block;
    margin-top: 300px;
    height: 234px

}
#badge
  svg
    position relative
    top: -310px
  > * { position: absolute; }
  

.scannerArea
  position relative
  display inline-block

.scanner
  position absolute
  width: 100%
  height: 10px
  background: red
  opacity: .3
  display: none