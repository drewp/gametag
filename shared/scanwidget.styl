

.scanArea
  font-family: orbitron;
  width: 220px
  height: 400px
  background: #ccc
  border-radius: 10px
  border: 1px solid white
  box-shadow: 5px 5px 20px black
  text-shadow: 2px 2px 1px rgb(255, 255, 255);
  color: rgb(70, 70, 70)

  overflow: hidden
  h2 
    margin: 0;
    padding: 9px;

  .scan
    overflow: hidden
    font-size: 27px
    .mode
      x
    .decodedMode
      img
        width: 190px

    .idleMode
      img
        width: 190px
        height: 140px

.rank
  border-radius 24px
  font-size: 75%
  display inline-block
  margin: 14px 3px
  padding: 12px 13px 7px 13px
  background: #D9E4AC;
  border: 1px solid #8A9459;

.have
  color: #000
  text-shadow: 1px 1px 0 #DFDF5A
  
.need
  color rgba(121, 121, 24, 0.32)
    